.container {
  position: relative;
  box-shadow: 0 0 25px 0 rgba(0, 0, 0, 0.5);
  overflow: hidden;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}

.equipmentOperate {
  background: #fff;
  height: auto;
  min-height: 95%;
  width: 92%;
  padding: 4%;
  position: relative;
  transition: all 0.25s;
  z-index: 10;
  overflow-x: hidden;
  -ms-overflow-style: -ms-autohiding-scrollbar;
  overflow-y: auto;
}

.text, .btn {
  display: block;
  margin: 60rpx auto;
  height: 88rpx;
  flex: 1;
  font-size: 32rpx;
}

.text {
  width: 640rpx;
  border: 2rpx solid #bbb;
  border-radius: 20rpx;
  background: #fff;
}

.text input {
  width: 100%;
  height: 100%;
}

.btn button {
  width: 640rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  padding: 4rpx 20rpx;
  font-size: 32rpx;
}

.equipmentName, .equipmentBtn, .equipmentNumber, equipmentFill {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.equipmentName text {
  flex: 1;
  vertical-align: top;
  width: 25%;
  line-height: 100rpx;
}

.equipmentName input {
  flex: 3;
  width: 60%;
  display: inline-block;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
}

