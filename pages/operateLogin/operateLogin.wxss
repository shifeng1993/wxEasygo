.equipmentNumber text {
  display: inline-block;
  width: 25%;
  height: 100%;
  text-align: left;
  line-height: 100rpx;
}

.equipmentFill button {
  width: 80%;
  color: #fff;
  line-height: 80rpx;
}

.form {
  width: 99%;
  margin-bottom: 15px;
  overflow: hidden;
  -ms-overflow-style: -ms-autohiding-scrollbar;
  border-bottom: 2rpx solid #ddd;
  min-height: 0.01%;
}

.form .table {
  border-spacing: 0;
  border-collapse: collapse;
  width: 98%;
  border-radus: 6rpx;
  background: #fff;
  border-color: #e2e7eb;
  margin-bottom: 0;
  font-size: 24rpx;
  font-family: 'Open Sans', "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #707478;
}

.form input {
  border: 1rpx solid #bbb;
  border-radius: 10rpx;
  width: 100%;
  line-height: 24rpx;
}

.form tbody, .form thead {
  width: 100%;
}

.form th {
  border-top: 0;
  white-space: nowrap;
  border-color: #e2e7eb;
  padding: 10px 15px;
  background: #fff;
  color: #242a30;
  font-weight: 600;
  border-bottom: 2rpx solid #e2e7eb !important;
  line-height: 1.42857143;
  vertical-align: bottom;
  text-align: left;
  width: 14%;
}

.table-title {
  text-align: center;
  width: 100%;
  height: auto;
  border-bottom: 1px solid #ddd;
  margin-top: 30rpx;
}

.table-title .title {
  font-weight: 500;
  color: #242a30;
  font-size: 32rpx;
  line-height: 56rpx;
  font-family: inherit;
}

.form td {
  border-color: #e2e7eb;
  padding: 10px 15px;
  background: #fff;
  line-height: 60rpx;
  vertical-align: top;
  border-top: 1px solid #ddd;
  text-align: left;
  width: 14%;
}

.putStock {
  width: 100%;
  height: 88rpx;
}

.putStock button {
  color: #fff;
  width: 640rpx;
  height: 100%;
}

.renamebtn {
  height: 88rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  width: 640rpx;
}
