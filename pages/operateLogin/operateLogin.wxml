<view class="container">
  <scroll-view scroll-y="true" class="equipmentOperate">
    <view class="equipmentNumber">
      <text>设备编号：</text>
      <text class="flex-3">{{machineId}}</text>
    </view>
    <view class="equipmentName">
      <text>机器名称：</text>
      <input type="text" placeholder="设备名称" value="{{name}}" bindchange="nameChange" />
    </view>
    <view class="equipmentBtn">
      <button type="default" class="bg-green color-white" hover-class="bg-green-hover" bindtap="rename">修改名称</button>
      <button type="default" class="bg-blue" hover-class="bg-blue-hover" bindtap="fillingAll">一键补满</button>
    </view>
    <view class="table-title">
      <view class="title">商品统计列表</view>
    </view>
    <view class="form">
      <table class="table">
        <thead>
          <tr>
            <th>货道编号</th>
            <th>商品信息</th>
            <th>库存数量</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>1</td>
            <td bindtap="groupForm">Table cell</td>
            <td>3</td>
          </tr>
          <tr>
            <td>2</td>
            <td bindtap="groupForm">Table cell</td>
            <td>2</td>
          </tr>
        </tbody>
      </table>
    </view>
    <view class="putStock">
      <button type="default" class="bg-blue" hover-class="bg-blue-hover">确认库存</button>
    </view>
  </scroll-view>
</view>