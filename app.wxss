.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

page {
  width: 100%;
  height: 100%;
  font-family: 'Open Sans', "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #000;
}

.h1 {
  font-weight: 500;
  color: #242a30;
  font-size: 48rpx;
  margin: 0 0 40rpx;
  padding: 0;
  /*border: none;/dd*/
  line-height: 56rpx;
  font-family: inherit;
}

table {
  display: table;
}

tbody {
  display: table-row-group;
}

thead {
  display: table-header-group;
}

tfoot{
  display: table-footer-group;
}
tr {
  display: table-row;
}

caption {
  display: table-caption;
  text-align: center;
}

th, td {
  display: table-cell;
}

.bg-green {
  background: #00acac !important;
}
.bg-green-hover {
  background: #008f8f !important;
}

.bg-blue {
  background: #348fe2 !important;
}
.bg-blue-hover {
  background: #2970b1 !important;
}

.bg-purple {
  background: #727cb6 !important;
}
.bg-purple-hover{
  background: #616a9b !important;
}
.bg-red {
  background: #ff5b57 !important;
}
.bg-red-hover {
  background: #c64643 !important;
}

.bg-gray {
  background: #dbdbdb !important;
}

.bg-gray-hover{
background: #bcbcbc !important;
}
.color-black{
  color: #000 !important;
}
.color-white{
  color: #fff !important;
}
.color-gray{
  color: #747474 !important;
}
.flex-1{
  flex: 1 !important;
}
.flex-2{
  flex: 2 !important;
}
.flex-3{
  flex: 3 !important;
}
.tabbar {
  position: fixed;
  bottom: 0;
  background: #fcfcfc;
  border-top: 2rpx solid #fff;
  width: 100%;
  height: 9%;
  display: flex;
  color: #7f8389;
  font-size: 24rpx;
  z-index:9999;
}

.tabbar .item {
  flex: 1;
  text-align: center;
  padding: 16rpx;
}

.tabbar .item.active {
  color: #3a91df;
}
.tabbar .item .icon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}
.tabbar .item .icon image{
  width: 100%;
  height: 100%;
  
}
